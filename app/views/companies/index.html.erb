<%= render 'shared/flash_message' %>
<%- model_class = Company -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table id="companies" class="display" data-source="<%= companies_url(format: "json") %>">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:name) %></th>
      <th><%= model_class.human_attribute_name(:cnpj) %></th>
      <th><%= model_class.human_attribute_name(:phone) %></th>
      <th><%= model_class.human_attribute_name(:total_strategy) %></th>
      <th><%= model_class.human_attribute_name(:used_strategy) %></th>
      <th><%= model_class.human_attribute_name(:total_consultation) %></th>
      <th><%= model_class.human_attribute_name(:used_consultation) %></th>
      <th><%= model_class.human_attribute_name(:dt_last_consultation) %></th>
    </tr>
  </thead>
  <tbody>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_company_path,
            :class => 'btn btn-primary' %>