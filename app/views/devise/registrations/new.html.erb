<div class="row centered-form">
  <div class="col-xs-4 col-sm-4 col-md-4 col-sm-offset2 col-md-offset-3">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">Cadastre - se</h3>
      </div>

      <div class="panel-body">
        <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= f.error_notification %>
              <%= f.input :person_id,:collection => @people,:value_method => :id,:name => "Pessoa", prompt: "Selecione a Pessoa" %>
              <!--<%= f.association :person, required: true, autofocus: true, :include_blank =>  false , prompt: "Selecione seu nome"%> -->
              <%= f.input :email, required: true %>
              <%= f.input :password, required: true, hint: ("mÃ­nimo caracteres #{@minimum_password_length}" if @minimum_password_length) %>
              <%= f.input :password_confirmation, required: true %>
          <div class="form-actions">
              <%= f.button :submit, "Enviar", class: "btn btn-primary btn-block" %>
          </div>
        <% end %>

        <div class="links">
          <%= render "devise/shared/links" %>
        </div>
      </div>
    </div>
  </div>
</div>
